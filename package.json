{
  "name": "pitstop",
  "version": "1.0.0",
  "description": "SASS compile|autoprefix|minimize and live-reload dev server using Browsersync for static HTML",
  "main": "dist/index.php",
  "author": "5t3ph",
  "scripts": {
    "build:sass": "sass  --no-source-map src/sass:dist/css",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* dist",
    "copy:js": "copyfiles -u 1 ./src/js/**/* dist",
    "copy:plugins": "copyfiles -u 1 ./src/plugins/**/* dist",
    "copy:localization": "copyfiles -u 1 ./src/localization/**/* dist",
    "copy:global": "copyfiles -u 1 ./src/global/**/* dist",
    "copy:pages": "copyfiles -u 1 ./src/pages/**/* dist",
    "copy:php": "copyfiles -u 1 ./src/*.php dist",
    "copy": "npm-run-all --parallel copy:*",
    "watch:assets": "onchange \"src/assets/**/*\" -- npm run copy:assets",
    "watch:js": "onchange \"src/js/**/*\" -- npm run copy:js",
    "watch:plugins": "onchange \"src/plugins/**/*\" -- npm run copy:plugins",
    "watch:localization": "onchange \"src/localization/**/*\" -- npm run copy:localization",
    "watch:global": "onchange \"src/global/**/*\" -- npm run copy:global",
    "watch:pages": "onchange \"src/pages/**/*\" -- npm run copy:pages",
    "watch:php": "onchange \"src/*.php\" -- npm run copy:php",
    "watch:sass": "sass  --no-source-map --watch src/sass:dist/css",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server dist --files dist",
    "start": "npm-run-all copy --parallel watch serve",
    "build": "npm-run-all copy build:*",
    "postbuild": "postcss dist/css/*.css -u autoprefixer cssnano -r --no-map"
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.8"
  }
}
